#include <stdio.h>
#include <stdlib.h>

#include <stdio.h>

int main() {
    int choice;
    float balance = 0.0;
    float amount;

    do {

        printf("\n===== ATM MENU =====\n");
        printf("1. Balance Inquiry\n");
        printf("2. Deposit\n");
        printf("3. Withdraw\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

            case 1:
                printf("\nYour current balance is: %.2f\n", balance);
                break;

            case 2:
                printf("\nEnter amount to deposit: ");
                scanf("%f", &amount);


                if (amount > 0) {
                    balance += amount;
                    printf("Deposit successful! New balance: %.2f\n", balance);
                } else {
                    printf("Invalid amount! Deposit must be positive.\n");
                }
                break;

            case 3:
                printf("\nEnter amount to withdraw: ");
                scanf("%f", &amount);


                if (amount <= 0) {
                    printf("Invalid amount! Withdrawal must be positive.\n");
                }

                else if (amount > balance) {
                    printf("Insufficient balance! You have only %.2f\n", balance);
                }
                else {
                    balance -= amount;
                    printf("Withdrawal successful! New balance: %.2f\n", balance);
                }
                break;

            case 4:
                printf("\nThank you for using the ATM. Goodbye!\n");
                break;

            default:
                printf("\nInvalid choice! Please enter a number between 1 and 4.\n");
        }

    } while (choice != 4);

    return 0;
}

